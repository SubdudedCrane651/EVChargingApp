<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:charts="clr-namespace:Microcharts;assembly=Microcharts"
              xmlns:local="clr-namespace:EVCharging"
              x:Class="EVCharging.MainPage">
    <VerticalStackLayout Padding="20">
        <Label Text="EV Charging Report" FontSize="24" />

        <Editor x:Name="reportText" HeightRequest="200" IsReadOnly="True" />

        <Label x:Name="totalLabel" Text="" FontSize="18" TextColor="Green" />

        <Picker x:Name="chartPicker">
            <Picker.Items>
                <x:String>Monthly Costs</x:String>
                <x:String>EV vs Gas cost</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Show Chart" Clicked="ShowChartButton_Clicked" />
        <local:CustomChartView x:Name="chartView" HeightRequest="300" WidthRequest="300" />
    </VerticalStackLayout>
</ContentPage>